<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="25dp"
    android:background="@color/white"
    tools:context=".ForgotPasswordActivity">

    <LinearLayout
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/signin_illus"
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/color_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FireNotes"
            android:textStyle="bold"
            android:fontFamily="@font/exomedium"
            android:textSize="24sp"
            android:textColor="@color/my_sec"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forgot_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitobold"
            android:text="Forgot"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosemi"
            android:text="Password?"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:text="Don't worry, Enter your email and we'll send you a link to reset your password"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/grey"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Email"
            android:textColor="@color/grey"
            android:layout_marginTop="40dp"
            android:textSize="16sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_edit_text"
            android:inputType="textEmailAddress"
            android:hint="Enter Your Email ID"
            android:textSize="15dp"
            android:textCursorDrawable="@null"
            android:fontFamily="@font/nunito"
            android:background="@drawable/edit_text_container"
            android:drawableStart="@drawable/mail_icon"
            android:drawableTint="@color/my_sec"
            android:drawablePadding="15dp"
            android:padding="16dp"
            android:layout_marginTop="5dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/forgot_pass_btn"
            android:text="Reset Password"
            app:backgroundTint="@null"
            android:background="@drawable/button_shape"
            android:hapticFeedbackEnabled="true"
            android:fontFamily="@font/exosemi"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:textSize="16sp"
            />

        <ProgressBar
            android:layout_width="24dp"
            android:layout_height="64dp"
            android:id="@+id/progress_bar"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_password_text"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go back to "
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_text_button"
            android:text="Log In"
            android:hapticFeedbackEnabled="true"
            android:textColor="@color/my_sec"
            android:fontFamily="@font/nunitosemi"
            android:textSize="14sp"
            />

    </LinearLayout>

</RelativeLayout>